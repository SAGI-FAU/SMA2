<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".ResultsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Task Results"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tapping_1"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/bTapping_one"
            android:onClick="onButtonClicked_Tapping_one"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tapping_2"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/bTapping_two"
            android:onClick="onButtonClicked_Tapping_two"
            />

    </LinearLayout>



</LinearLayout>