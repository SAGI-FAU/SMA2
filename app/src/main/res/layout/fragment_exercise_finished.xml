<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseFragments.ExerciseFinished">

    <ImageView
        android:id="@+id/good"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintHeight_percent="0.35"
        android:layout_gravity="center"
        android:src="@drawable/star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/motivationMessage"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="@string/motivate"
        android:textAlignment="center"

        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/good" />

    <Button
        android:id="@+id/btnDoneExSV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="64sp"
        android:layout_marginEnd="64sp"
        android:background="@color/colorPrimary"
        android:text="@string/done"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRedoExSV"
        app:layout_constraintDimensionRatio="1.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motivationMessage"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/btnRedoExSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/again"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motivationMessage"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintWidth_percent="0.4" />


</android.support.constraint.ConstraintLayout>