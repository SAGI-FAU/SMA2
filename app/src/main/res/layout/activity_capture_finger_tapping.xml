<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.sma2.sma2.MainActivity">


    <TextView
        android:id="@+id/textView_tapping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tapping_ex"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_tapping_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tapping_ex1"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_tapping"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <VideoView
        android:id="@+id/videoView_6"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_tapping_name"/>



    <Button
        android:id="@+id/button_instructions_tapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/instructions"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/videoView_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/button_record_tapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/start"
        android:layout_marginTop="20dp"
        android:textSize="70sp"
        app:layout_constraintTop_toBottomOf="@+id/button_instructions_tapping"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>



</android.support.constraint.ConstraintLayout>