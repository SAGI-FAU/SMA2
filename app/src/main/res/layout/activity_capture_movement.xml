<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.sma2.sma2.MainActivity">



    <TextView
        android:id="@+id/textView_capture_movement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recording2"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <Chronometer
        android:id="@+id/accgraph_chrono"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView_capture_movement"
        />



    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:id="@+id/accgraph_graph"
        app:layout_constraintTop_toBottomOf="@+id/accgraph_chrono"
        android:layout_marginTop="20dp" />



    <Button
        android:id="@+id/button_continue_walking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/next"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>