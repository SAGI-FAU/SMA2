<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0sp"
    android:layout_marginRight="0sp"
    tools:context="com.sma2.apkinson.SettingsActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wallpaper3_"
        tools:srcCompat="@drawable/wallpaper3_" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSettingsText"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:lines="1"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />




    <TextView
        android:id="@+id/textViewNotifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Notification_time"
        android:layout_marginTop="100sp"
        android:layout_marginStart="8sp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:lines="1"
        android:textSize="@dimen/textview_text_size"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/SpinnerNotifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginTop="100sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/med_time"
        android:textSize="@dimen/textview_text_size"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />


    <Switch
        android:id="@+id/switch_wifi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7"
        app:layout_constraintWidth_percent="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:switchMinWidth="56sp"
        android:textOff="OFF"
        android:textOn="ON"
        android:text="@string/send_data"
        android:checked="true"
        android:textSize="@dimen/textview_text_size"
        app:layout_constraintTop_toBottomOf="@+id/SpinnerNotifications" />


    <Button
        android:id="@+id/button_update_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/update_profile"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/switch_wifi" />




    <Button
        android:id="@+id/button_update_medicine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/update"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/button_update_profile" />






    <Button
        android:id="@+id/button_export_metadata"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/export"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/button_update_medicine" />


    <Button
        android:id="@+id/button_change_scheduler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/scheduler"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/button_export_metadata" />


    <Button
        android:id="@+id/button_restart_session"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:text="@string/restart_session"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/button_change_scheduler" />



</androidx.constraintlayout.widget.ConstraintLayout>