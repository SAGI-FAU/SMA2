<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.sma2.sma2.SettingsActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSettingsText"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:lines="1"
        android:textSize="@dimen/menu_text_size"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:lines="1"
        android:textSize="@dimen/textview_text_size"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
         />



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/language_radio"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView_lang"
        >

        <RadioButton
            android:id="@+id/rbSpanish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/spanish"
            android:checked="true"
            android:button="@null"
            />


        <RadioButton
            android:id="@+id/rbGerman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/german"
            android:checked="true"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/rbEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/english"
            android:checked="true"
            android:button="@null"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_medicineintake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/med"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/language_radio"
        android:lines="1"
        android:textSize="@dimen/textview_text_size"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/button_update_medicine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimaryDark"
        android:text="@string/update"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/textView_medicineintake" />

    <Button
        android:id="@+id/button_menu_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/button_text_size"
        android:background="@color/colorPrimaryDark"
        android:text="@string/back" />


</android.support.constraint.ConstraintLayout>